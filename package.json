{
  "name": "reuse-pending-promise",
  "version": "0.4.2",
  "description": "Re-use pending promises",
  "engines": {
    "node": ">= 14.13.1 || >= 16.0.0"
  },
  "type": "module",
  "exports": "./src/reuse-pending-promise.js",
  "files": [
    "src",
    "*.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twalker/reuse-pending-promise.git"
  },
  "author": "Tim Walker",
  "license": "MIT",
  "homepage": "https://github.com/twalker/reuse-pending-promise#readme",
  "bugs": {
    "url": "https://github.com/twalker/reuse-pending-promise/issues"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "lint": "xo"
  },
  "jest": {
    "transform": {}
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "promise/prefer-await-to-then": "warn"
    },
    "overrides": [
      {
        "files": "test/*.js",
        "env": [
          "es2021",
          "node",
          "jest"
        ]
      }
    ],
    "ignores": [
      ".github"
    ]
  },
  "devDependencies": {
    "jest": "^27.1.1",
    "xo": "^0.44.0"
  },
  "dependencies": {}
}
